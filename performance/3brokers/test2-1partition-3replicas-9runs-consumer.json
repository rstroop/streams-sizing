{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "labels": {
            "load-test": "consumer"
        },
        "name": "test2-1partition-3replicas-9runs-consumer"
    },
    "spec": {
        "activeDeadlineSeconds": 86400,
        "completions": 9,
        "parallelism": 9,
        "template": {
            "metadata": {
                "name": "1partition-3replicas-9runs-consumer-job"
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "--topic",
                            "1partition-3replicas",
